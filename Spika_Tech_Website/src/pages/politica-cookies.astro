---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Layout from '../layouts/Layout.astro';
---
<Layout title="Política de Cookies - Spika Tech">
  <Header />
  <main class="min-h-screen bg-[#f8faf9]">
    <!-- Header con gradiente y color corporativo -->
    <div class="bg-gradient-to-r from-[#003035] to-[#4b858e] text-white py-12" style="padding-top: 80px;">
      <div class="container mx-auto px-4 max-w-4xl">
        <div class="flex items-center mb-6">
          <div class="w-12 h-12 bg-[#cedf00] rounded-full flex items-center justify-center mr-4">
            <svg class="w-6 h-6 text-[#003035]" fill="currentColor" viewBox="0 0 20 20">
              <path d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zM3 10a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1v-6zM14 9a1 1 0 00-1 1v6a1 1 0 001 1h2a1 1 0 001-1v-6a1 1 0 00-1-1h-2z"></path>
            </svg>
          </div>
          <h1 class="text-4xl font-bold" style="color:#cedf00" data-i18n="PoliticaCookies.title"></h1>
        </div>
        <p class="text-lg text-[#cedf00] leading-relaxed" data-i18n="PoliticaCookies.subtitle">
          
        </p>
      </div>
    </div>

    <div class="container mx-auto px-4 py-8 max-w-4xl">
      <!-- Introducción -->
      <div class="bg-white rounded-xl shadow-lg p-8 mb-8 border-l-4" style="border-color:#cedf00">
        <p class="text-[#003035] text-lg leading-relaxed" data-i18n="PoliticaCookies.introduction">
          
        </p>
      </div>

      <div class="bg-white rounded-xl shadow-lg p-8 mb-8">
        <div class="flex items-center mb-6">
          <div class="w-10 h-10 bg-[#cedf00] rounded-full flex items-center justify-center mr-4">
            <span class="text-[#003035] font-bold text-lg">1</span>
          </div>
          <h2 class="text-2xl font-bold" style="color:#003035" data-i18n="PoliticaCookies.sections.what_are_cookies.title"></h2>
        </div>
        <div class="bg-[#f8faf9] rounded-lg p-6 border-l-4" style="border-color:#4b858e">
          <p class="text-[#003035] mb-4" data-i18n="PoliticaCookies.sections.what_are_cookies.description">
            
          </p>
          <p class="text-[#003035] mb-4" data-i18n="PoliticaCookies.sections.what_are_cookies.advantages">
            
          </p>
          <ul class="space-y-2 text-[#003035]">
            <li class="flex items-start">
              <svg class="w-5 h-5 text-[#4b858e] mr-2 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              <span data-i18n="PoliticaCookies.sections.what_are_cookies.benefits.0"></span>
            </li>
            <li class="flex items-start">
              <svg class="w-5 h-5 text-[#4b858e] mr-2 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              <span data-i18n="PoliticaCookies.sections.what_are_cookies.benefits.1"></span>
            </li>
            <li class="flex items-start">
              <svg class="w-5 h-5 text-[#4b858e] mr-2 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              <span data-i18n="PoliticaCookies.sections.what_are_cookies.benefits.2"></span>
            </li>
            <li class="flex items-start">
              <svg class="w-5 h-5 text-[#4b858e] mr-2 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              <span data-i18n="PoliticaCookies.sections.what_are_cookies.benefits.3"></span>
            </li>
          </ul>
        </div>
      </div>

      <div class="bg-white rounded-xl shadow-lg p-8 mb-8">
        <div class="flex items-center mb-6">
          <div class="w-10 h-10 bg-[#cedf00] rounded-full flex items-center justify-center mr-4">
            <span class="text-[#003035] font-bold text-lg">2</span>
          </div>
          <h2 class="text-2xl font-bold" style="color:#003035" data-i18n="PoliticaCookies.sections.types_of_cookies.title"></h2>
        </div>
        <div class="space-y-6">
          <div class="bg-[#f8faf9] rounded-lg p-6 border-l-4" style="border-color:#cedf00">
            <h3 class="font-semibold mb-3" style="color:#4b858e" data-i18n="PoliticaCookies.sections.types_of_cookies.own_cookies.title"></h3>
            <p class="text-[#003035] mb-4" data-i18n="PoliticaCookies.sections.types_of_cookies.own_cookies.description"></p>
            <p class="text-[#003035]" data-i18n="PoliticaCookies.sections.types_of_cookies.own_cookies.list_description"></p>
          </div>
          <div class="text-center">
            <img src="https://www.spikatech.com/wp-content/uploads/2020/04/tabla-300x82.jpg" alt="Tabla cookies" class="mx-auto my-4 rounded shadow" style="border:2px solid #cedf00;max-width:100%;height:auto;" />
          </div>
          <div class="bg-[#f8faf9] rounded-lg p-6 border-l-4" style="border-color:#4b858e">
            <h3 class="font-semibold mb-3" style="color:#4b858e" data-i18n="PoliticaCookies.sections.types_of_cookies.third_party_cookies.title"></h3>
            <p class="text-[#003035]" data-i18n="PoliticaCookies.sections.types_of_cookies.third_party_cookies.description"></p>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-xl shadow-lg p-8 mb-8">
        <div class="flex items-center mb-6">
          <div class="w-10 h-10 bg-[#cedf00] rounded-full flex items-center justify-center mr-4">
            <span class="text-[#003035] font-bold text-lg">3</span>
          </div>
          <h2 class="text-2xl font-bold" style="color:#003035" data-i18n="PoliticaCookies.sections.authorization.title"></h2>
        </div>
        <div class="bg-[#f8faf9] rounded-lg p-6 border-l-4" style="border-color:#4b858e">
          <p class="text-[#003035]" data-i18n="PoliticaCookies.sections.authorization.description"></p>
        </div>
      </div>

      <div class="bg-white rounded-xl shadow-lg p-8 mb-8">
        <div class="flex items-center mb-6">
          <div class="w-10 h-10 bg-[#cedf00] rounded-full flex items-center justify-center mr-4">
            <span class="text-[#003035] font-bold text-lg">4</span>
          </div>
          <h2 class="text-2xl font-bold" style="color:#003035" data-i18n="PoliticaCookies.sections.withdraw_consent.title"></h2>
        </div>
        <div class="bg-[#f8faf9] rounded-lg p-6 border-l-4" style="border-color:#4b858e">
          <p class="text-[#003035] mb-4" data-i18n="PoliticaCookies.sections.withdraw_consent.description"></p>
          <p class="text-[#003035] mb-4" data-i18n="PoliticaCookies.sections.withdraw_consent.warning"></p>
          <div class="grid md:grid-cols-2 gap-4">
            <div class="bg-white rounded-lg p-4 border" style="border-color:#cedf00">
              <h4 class="font-semibold mb-2" style="color:#4b858e" data-i18n="PoliticaCookies.sections.withdraw_consent.browsers.title"></h4>
              <ul class="space-y-2 text-sm text-[#003035]">
                <li><strong data-i18n="PoliticaCookies.sections.withdraw_consent.browsers.chrome"></strong> <a href="http://support.google.com/chrome/bin/answer.py?hl=es&answer=95647" class="text-[#4b858e] hover:underline" target="_blank" rel="noopener" data-i18n="PoliticaCookies.sections.withdraw_consent.browsers.cookie_settings"></a></li>
                <li><strong data-i18n="PoliticaCookies.sections.withdraw_consent.browsers.explorer"></strong> <a href="https://support.microsoft.com/es-es/kb/278835" class="text-[#4b858e] hover:underline" target="_blank" rel="noopener" data-i18n="PoliticaCookies.sections.withdraw_consent.browsers.cookie_settings"></a></li>
                <li><strong data-i18n="PoliticaCookies.sections.withdraw_consent.browsers.firefox"></strong> <a href="http://support.mozilla.org/es/kb/habilitar-y-deshabilitar-cookies-que-los-sitios-we" class="text-[#4b858e] hover:underline" target="_blank" rel="noopener" data-i18n="PoliticaCookies.sections.withdraw_consent.browsers.cookie_settings"></a></li>
                <li><strong data-i18n="PoliticaCookies.sections.withdraw_consent.browsers.safari"></strong> <a href="https://support.apple.com/kb/PH17191?locale=es_ES" class="text-[#4b858e] hover:underline" target="_blank" rel="noopener" data-i18n="PoliticaCookies.sections.withdraw_consent.browsers.cookie_settings"></a></li>
              </ul>
            </div>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-xl shadow-lg p-8 mb-8">
        <div class="flex items-center mb-6">
          <div class="w-10 h-10 bg-[#cedf00] rounded-full flex items-center justify-center mr-4">
            <span class="text-[#003035] font-bold text-lg">5</span>
          </div>
          <h2 class="text-2xl font-bold" style="color:#003035" data-i18n="PoliticaCookies.sections.updates.title"></h2>
        </div>
        <div class="bg-[#f8faf9] rounded-lg p-6 border-l-4" style="border-color:#4b858e">
          <p class="text-[#003035] mb-4" data-i18n="PoliticaCookies.sections.updates.description">
            
          </p>
          <p class="text-[#003035] mb-4" data-i18n="PoliticaCookies.sections.updates.new_conditions">
          </p>
          <p class="text-[#003035]" data-i18n="PoliticaCookies.sections.updates.contact">
          </p>
        </div>
      </div>

      <div class="bg-white rounded-xl shadow-lg p-8 mb-8 border-l-4" style="border-color:#cedf00">
        <div class="flex items-center mb-6">
          <div class="w-10 h-10 bg-[#cedf00] rounded-full flex items-center justify-center mr-4">
            <span class="text-[#003035] font-bold text-lg">6</span>
          </div>
          <h2 class="text-2xl font-bold" style="color:#003035" data-i18n="PoliticaCookies.sections.security_policy.title"></h2>
        </div>
        <div class="bg-[#f8faf9] rounded-lg p-6 border-l-4" style="border-color:#4b858e">
          <p class="text-[#003035] mb-4" data-i18n="PoliticaCookies.sections.security_policy.description"></p>
          <a class="inline-flex items-center bg-[#cedf00] text-[#003035] px-6 py-3 rounded-lg font-semibold hover:bg-[#4b858e] hover:text-white transition-colors" href="https://firebasestorage.googleapis.com/v0/b/vrcardioexplorer.appspot.com/o/SGSI%2FPLT%20001.02_SEGURIDAD%20DE%20LA%20INFORMACI%C3%93N%20(1).pdf?alt=media&token=21106f22-ce33-4a20-88b5-4c75730b656d" target="_blank" rel="noopener">
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M6 2a2 2 0 00-2 2v12a2 2 0 002 2h8a2 2 0 002-2V7.414A2 2 0 0015.414 6L12 2.586A2 2 0 0010.586 2H6zm5 6a1 1 0 10-2 0v2H7a1 1 0 100 2h2v2a1 1 0 102 0v-2h2a1 1 0 100-2h-2V8z" clip-rule="evenodd"></path>
            </svg>
            <span data-i18n="PoliticaCookies.sections.security_policy.button_text"></span>
          </a>
        </div>
      </div>

      <!-- Botón volver -->
      <div class="text-center">
        <a href="/" class="inline-flex items-center bg-[#cedf00] text-[#003035] px-8 py-4 rounded-xl font-semibold hover:bg-[#4b858e] hover:text-white transition-all duration-300 shadow-lg hover:shadow-xl transform hover:-translate-y-1">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
          </svg>
          <span data-i18n="PoliticaCookies.back_button"></span>
        </a>
      </div>
    </div>
  </main>
  <Footer />

  <script>
    import { initializeTranslations } from '../i18n/config.ts';
    
    // Inicializar traducciones cuando se carga la página
    document.addEventListener('DOMContentLoaded', () => {
      initializeTranslations();
    });
  </script>
</Layout> 