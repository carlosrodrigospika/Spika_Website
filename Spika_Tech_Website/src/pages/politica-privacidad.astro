---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Política de Privacidad - Spika Tech">
    <Header />
    <main class="min-h-screen bg-[#f8faf9]">
        <!-- Header con gradiente y color corporativo -->
        <div class="bg-gradient-to-r from-[#003035] to-[#4b858e] text-white py-12" style="padding-top: 80px;">
            <div class="container mx-auto px-4 max-w-4xl">
                <div class="flex items-center mb-6">
                    <div class="w-12 h-12 bg-[#cedf00] rounded-full flex items-center justify-center mr-4">
                        <svg class="w-6 h-6 text-[#003035]" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd"></path>
                        </svg>
                    </div>
                    <h1 class="text-4xl font-bold" style="color:#cedf00" data-i18n="PoliticaPrivacidad.title"></h1>
                </div>
                <p class="text-lg text-[#cedf00] leading-relaxed" data-i18n="PoliticaPrivacidad.subtitle">
                    
                </p>
            </div>
        </div>

        <div class="container mx-auto px-4 py-8 max-w-4xl">
