---
// No props needed, the header is always opaque with the new design
---


<header class="fixed top-0 left-0 right-0 z-60 p-4 sm:p-6 lg:p-8" style="width: 100vw;">
<script>
document.addEventListener('DOMContentLoaded', function () {
    const menuBtn = document.getElementById('menu-btn');
    const menu = document.getElementById('overlay-menu');

    if (menuBtn && menu) {
        menuBtn.addEventListener('click', function () {
            if (menu.classList.contains('hidden')) {
                menu.classList.remove('hidden');
                // Pequeño delay para asegurar que el elemento esté visible antes de animar
                setTimeout(() => {
                    menu.classList.add('animate-open');
                }, 10);
            }
        });
    }
});
</script>
    <div class="flex items-center justify-end">
        <!-- Logo SpikaTech a la izquierda -->
